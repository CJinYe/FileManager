<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:orientation="horizontal">

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/dialog_go_back_bg">

    </RelativeLayout>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:paddingTop="90dp"
                  android:layout_centerHorizontal="true"
                  android:orientation="horizontal">

        <ImageButton
            android:id="@+id/dialog_go_back_but_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:src="@drawable/selector_dialog_cancel"
            android:background="@drawable/sel_focus"
            android:textColor="#ffffff"
            android:focusable="true"
            android:textSize="18sp"/>
        <ImageButton
            android:id="@+id/dialog_go_back_but_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/selector_dialog_sure"
            android:background="@drawable/sel_focus"
            android:text="æ˜¯"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

    </LinearLayout>
</RelativeLayout>