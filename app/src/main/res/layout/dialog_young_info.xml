<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout android:id="@+id/dialog_young_info_layout"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@drawable/dialog_young_menu_bg"
                  android:orientation="vertical">
        <TextView android:id="@+id/dialog_young_info_tv_title"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="71"
                  android:gravity="center"
                  android:text="删除"
                  android:textColor="#0c779b"/>
        <ScrollView android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="10dp"
                    android:layout_weight="158">
            <TextView android:id="@+id/dialog_young_info_tv_detail"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center_vertical"
                      android:lineSpacingMultiplier="1.2"
                      android:paddingStart="10dp"
                      android:text="删除后不可恢复，是否继续？"
                      android:textColor="#0c779b"/>
        </ScrollView>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="40"
                      android:orientation="horizontal">
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="260"/>

            <ImageButton android:id="@+id/dialog_young_info_but_close"
                         android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="120"
                         android:background="@null"
                         android:scaleType="fitXY"
                         android:src="@drawable/selector_dialog_young_info_close"/>
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="260"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="0dp"
                      android:layout_weight="20"/>
    </LinearLayout>

</LinearLayout>