<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_file_menu_background"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:paddingStart="2dp"
                  android:paddingEnd="2dp"
                  android:orientation="horizontal">
        <ImageButton android:id="@+id/dialog_file_menu_copy"
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:focusable="true"
                     android:layout_weight="1"
                     android:background="@drawable/sel_focus"
                     android:src="@drawable/selector_dialog_file_menu_copy"/>
        <ImageButton android:id="@+id/dialog_file_menu_cut"
                     android:layout_width="0dp"
                     android:focusable="true"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:background="@drawable/sel_focus"
                     android:src="@drawable/selector_dialog_file_menu_cut"/>
        <ImageButton android:id="@+id/dialog_file_menu_rename"
                     android:focusable="true"
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:background="@drawable/sel_focus"
                     android:src="@drawable/selector_dialog_file_menu_rename"/>
        <ImageButton android:id="@+id/dialog_file_menu_delete"
                     android:layout_width="0dp"
                     android:focusable="true"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:background="@drawable/sel_focus"
                     android:src="@drawable/selector_dialog_file_menu_delete"/>
        <ImageButton android:id="@+id/dialog_file_menu_detail"
                     android:layout_width="0dp"
                     android:focusable="true"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:background="@drawable/sel_focus"
                     android:src="@drawable/selector_dialog_file_menu_detail"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>