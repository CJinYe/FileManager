<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_file_detail_background">
    <LinearLayout
        android:id="@+id/dialog_file_detail_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--<TextView android:layout_width="match_parent"-->
        <!--android:layout_height="70dp"-->
        <!--android:gravity="center"-->
        <!--android:text="详情"-->
        <!--android:textColor="#3f62ff"-->
        <!--android:textSize="35sp"/>-->
        <!--<LinearLayout android:layout_width="match_parent"-->
        <!--android:layout_height="2dp"-->
        <!--android:background="#3f62ff"/>-->
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="80dp"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_margin="2dp"
                      android:orientation="horizontal"
                      android:paddingStart="20dp">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="名称："
                      android:textColor="#ffffff"
                      android:textSize="18sp"/>
            <TextView android:id="@+id/dialog_file_detail_title"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textColor="#ffffff"
                      android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_margin="2dp"
                      android:orientation="horizontal"
                      android:paddingStart="20dp">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="路径："
                      android:textColor="#ffffff"
                      android:textSize="18sp"/>
            <TextView android:id="@+id/dialog_file_detail_path"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textColor="#ffffff"
                      android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_margin="2dp"
                      android:orientation="horizontal"
                      android:paddingStart="20dp">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="大小："
                      android:textColor="#ffffff"
                      android:textSize="18sp"/>
            <TextView android:id="@+id/dialog_file_detail_size"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textColor="#ffffff"
                      android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_margin="2dp"
                      android:orientation="horizontal"
                      android:paddingStart="20dp">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="时间："
                      android:textColor="#ffffff"
                      android:textSize="18sp"/>
            <TextView android:id="@+id/dialog_file_detail_time"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textColor="#ffffff"
                      android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>


    <ImageButton
        android:id="@+id/dialog_file_detail_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_file_detail_ll"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/sel_focus"
        android:src="@drawable/selector_file_detail_close"/>
</RelativeLayout>