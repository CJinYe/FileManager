<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout android:id="@+id/dialog_young_rename_layout"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@drawable/dialog_young_bg"
                  android:orientation="vertical">
        <TextView android:id="@+id/dialog_young_rename_tv_title"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="70"
                  android:gravity="center"
                  android:text="重命名"
                  android:textColor="#0c779b"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="0dp"
                      android:layout_weight="25"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="40"
                      android:orientation="horizontal">
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="55"/>
            <EditText android:id="@+id/dialog_young_rename_edt"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:layout_weight="325"
                      android:background="@drawable/dialog_young_rename_edt_bg"/>
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="55"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="0dp"
                      android:layout_weight="27"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="40"
                      android:orientation="horizontal">
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="55"/>

            <ImageButton android:id="@+id/dialog_young_rename_but_cancel"
                         android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="120"
                         android:background="@null"
                         android:scaleType="fitXY"
                         android:src="@drawable/selector_dialog_young_delete_cancel"/>
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="85"/>
            <ImageButton android:id="@+id/dialog_young_rename_but_sure"
                         android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="120"
                         android:background="@null"
                         android:scaleType="fitXY"
                         android:src="@drawable/selector_dialog_young_delete_sure"/>
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="55"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="0dp"
                      android:layout_weight="24"/>
    </LinearLayout>

</LinearLayout>