<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout android:id="@+id/dialog_young_menu_layout"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@drawable/dialog_young_menu_bg"
                  android:orientation="vertical">
        <TextView android:id="@+id/dialog_young_menu_tv_title"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="75"
                  android:gravity="center"
                  android:text="请选择操作"
                  android:textColor="#0c779b"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="0dp"
                      android:layout_weight="50"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="120"
                      android:orientation="horizontal">
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="45"/>

            <ImageButton android:id="@+id/dialog_young_menu_but_copy"
                         android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="75"
                         android:background="@null"
                         android:scaleType="fitXY"
                         android:src="@drawable/selector_dialog_young_menu_copy"/>
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="45"/>

            <ImageButton android:id="@+id/dialog_young_menu_but_move"
                         android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="75"
                         android:background="@null"
                         android:scaleType="fitXY"
                         android:src="@drawable/selector_dialog_young_menu_move"/>
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="45"/>

            <ImageButton android:id="@+id/dialog_young_menu_but_rename"
                         android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="75"
                         android:background="@null"
                         android:scaleType="fitXY"
                         android:src="@drawable/selector_dialog_young_menu_rename"/>
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="45"/>

            <ImageButton android:id="@+id/dialog_young_menu_but_delete"
                         android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="75"
                         android:background="@null"
                         android:scaleType="fitXY"
                         android:src="@drawable/selector_dialog_young_menu_delete"/>
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="45"/>

            <ImageButton android:id="@+id/dialog_young_menu_but_info"
                         android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="75"
                         android:background="@null"
                         android:scaleType="fitXY"
                         android:src="@drawable/selector_dialog_young_menu_info"/>
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="45"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="0dp"
                      android:layout_weight="50"/>
    </LinearLayout>
</LinearLayout>